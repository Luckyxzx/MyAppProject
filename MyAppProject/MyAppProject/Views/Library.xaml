<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="MyAppProject.Views.Library"
             Title="Library">


    <!-- Basic Content page-->
    <ContentPage.Content>
        <StackLayout>
            <!-- sets a label which gives slight info on page-->
            <Label Text="Library Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <!-- sets a video source which plays background video with modification-->
            <xct:MediaElement Source="ms-appx:///backgroundvideo.mp4" 
                          ShowsPlaybackControls="True"
                          IsLooping="True" 
                          Aspect="AspectFill" 
                          AutoPlay="True" 
                          VerticalOptions="FillAndExpand" 
                          HorizontalOptions="FillAndExpand"
                          />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>